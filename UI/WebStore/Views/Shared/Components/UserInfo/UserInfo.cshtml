@using WebStore.Domain.Entities.Identity
@*для вошедшего в систему пользователя*@
<div class="shop-menu pull-right">
    <ul class="nav navbar-nav">
        @if (User.IsInRole(Role.Administrators))
        {
            <li>
                <a asp-area="Admin" asp-controller="Home" asp-action="Index">
                    <i class="fa fa-key"></i>Админка</a>
            </li>
        }            
        <li>
            <a asp-controller="UserProfile" asp-action="Index">
                <i class="fa fa-user"></i>@User.Identity!.Name
            </a>
        </li>
        <li>
            <a asp-controller="Cart" asp-action="Index" id="cart-container">
                <vc:cart/>
            </a>
        </li>
        <li>
            <a asp-controller="Account" asp-action="LogOut" >
                <i class="fa fa-sign-out fa"></i> Выход</a>
        </li>        
    </ul>
</div>