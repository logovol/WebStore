@using WebStore.ViewModels
@model IEnumerable<UserOrderViewModel>

@{
    Layout = "_UserProfileLayout";
    ViewBag.Title = "Список заказов";
}

<table class="table">
    <thead>
        <th>#</th>
        <th>Дата</th>
        <th>Телефон</th>
        <th>Сумма</th>
        <th>Описание</th>
    </thead>
    <tbody>
        @{
            var i = 1; 
        }
        @foreach(var order in Model)
        {
            <tr>
                <td>@(i++)</td>
                <td>@order.Date.ToString("dd/MM/yy HH:mm")</td>
                <td>@order.Address</td>
                <td>@order.Phone</td>
                <td>@order.TotalPrice</td>
                <td>@order.Description</td>
            </tr>
        }
    </tbody>
</table>